generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
model User {
  id              String @id @map("_id")
  github_id Int?
  email    String @unique 
  username String? 
  password String?
  image String?
  sessions Session[]

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Session {
  id              String @id @map("_id")
  userId    String
  expiresAt DateTime
  user      User     @relation(references: [id], fields: [userId], onDelete: Cascade)
}
